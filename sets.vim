syntax on
set number
set cursorline
set clipboard=unnamedplus
set tabstop=4
set shiftwidth=4
set expandtab
set noswapfile
set hlsearch
set incsearch
set hidden
set noerrorbells
set nowrap
set nobackup
set undodir=~/.vim/undodir
set undofile

let $NVIM_TUI_ENABLE_TRUE_COLOR=1
set termguicolors


set encoding=UTF-8


set mouse=a
set updatetime=50
:let mapleader = "\<Space>"
